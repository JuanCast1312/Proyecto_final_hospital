<h1>CENTRO HOSPITALARIO HAKkEND</h1>
<h2>LISTADO DE PACIENTES</h2>
<table>
    <thead>
        <tr>
            <th>Nombre del paciente</th>
            <th>Apellido del paciente</th>
            <th>Cédula del paciente</th>
            <th>Edad del paciente</th>
            <th>Teléfono del paciente</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each pacientes}}
        <tr>
            <form action="/pacientes/actualizar/{{cedula}}" method="post">
                <td><input id="paciente" name="paciente" value="{{nombre}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td><input id="apellido" name="apellido" value="{{apellido}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td><input id="cedula" value="{{cedula}}" disabled></td>
                <td><input id="edad" name="edad" value="{{edad}}" {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td><input id="telefono" name="telefono" value="{{telefono}}" {{#ifCond @key '!='../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                <td>
                {{#if ../estado}}
                    <a class="eliminar" href="pacientes/eliminar/{{cedula}}"><img src="/imagenes/eliminar.png"></a>
                    <a class="editar" href="pacientes/enviar/{{@key}}"><img src="/imagenes/editar.png"></a>
                {{else}}
                    {{#ifCond @key '==' ../claveSeleccionada}}
                    <input type="submit" value="Enviar">
                    
                    {{/ifCond}}
                {{/if}}
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>
<div class="opciones-tabla">
<a class="volver" href="/">Volver</a>
<a href="pacientes/agregar-pacientes">Agregar paciente</a>
</div>
